---
import Base from './Base.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';

export interface Props {
    title?: string;
}

const { title } = Astro.props as Props;

const description = 'Better than nicholas';
const icon = '/pfp.webp';
const site = 'BTN';
const titleMeta = title ? `${title} - ${site}` : site;
---

<Base
    description={description}
    icon={icon}
    titleMeta={titleMeta}
>
    <script>
        import '../scripts/anchors.js';
    </script>
    <Header
        icon={icon}
        site={site}
    >
    </Header>
    <div class="flex justify-center">
        <main class="flex flex-col max-w-[80rem] w-[80rem] sm:p-12 p-4 sm:gap-12 gap-8 h5">
            <slot />
        </main>
    </div>
    <Footer
        author="Attituding"
        authorHref="https://attituding.live"
        icon={icon}
    />
</Base>
