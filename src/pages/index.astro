---
import AutoGrid from '../components/AutoGrid.astro';
import Button from '../components/Button.astro';
import Title from '../components/Title.astro';
import LayoutBasic from '../layouts/LayoutBasic.astro';
---

<LayoutBasic>
    <div class="flex flex-col sm:gap-4 gap-2 max-w-3xl w-full p-4">
        <div
            class="flex h-fit w-full dark:bg-dark-2 bg-light-2 rounded-3xl p-8 justify-center items-center gap-4"
        >
            <Title
                createAnchor={false}
                heading="1"
                title="Better than Nicholas"
            />
        </div>
        <AutoGrid
            desktopGap="sm:gap-4"
            desktopGrid="projects-desktop:grid-cols-[repeat(auto-fit,minmax(10rem,1fr))]"
            mobileGap="gap-2"
            mobileGrid="grid-cols-[repeat(auto-fit,minmax(10rem,1fr))]"
        >
            <Button
                href="/login"
                target="_self"
                title="Login"
            />
            <Button
                href="/register"
                target="_self"
                title="Register"
            />
        </AutoGrid>
    </div>
</LayoutBasic>
